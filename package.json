{
  "name": "@rezkam/mono-mcp-server",
  "version": "0.2.0",
  "description": "MCP server for Mono task management - enables LLMs to manage tasks and create daily plans",
  "type": "module",
  "bin": {
    "mono-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "generate": "openapi-ts",
    "build": "npm run generate && tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run src/utils",
    "test:integration": "vitest run src/__tests__/integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tasks",
    "todo",
    "ai",
    "llm",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rezkam/mono-mcp-server"
  },
  "author": "rezkam",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@hey-api/openapi-ts": "^0.89.2",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.16",
    "msw": "^2.12.7",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
